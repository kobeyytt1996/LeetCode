/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode(int x) : val(x), left(NULL), right(NULL) {}
 * };
 */
class Solution {
public:
    TreeNode* mirrorTree(TreeNode* root) {
        if (root == nullptr)
            return root;

        TreeNode* newRoot = new TreeNode(root->val);
        mirrorTreeRecur(root, newRoot);

        return newRoot;
    }

    void mirrorTreeRecur(TreeNode* root, TreeNode* newRoot){
        if (root->left)
        {
            newRoot->right = new TreeNode(root->left->val);
            mirrorTreeRecur(root->left, newRoot->right);
        }
        if (root->right)
        {
            newRoot->left = new TreeNode(root->right->val);
            mirrorTreeRecur(root->right, newRoot->left);
        }

        return;
    }
};
